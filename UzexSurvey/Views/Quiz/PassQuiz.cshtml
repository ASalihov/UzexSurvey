@model DAL.Entities.Quiz

@{
    ViewBag.Title = "PassQuiz";
}

<h2>@Model.Name</h2>

<div class="list-group">
    @foreach (var item in Model.Questions)
    {
        <div class="list-group-item">
            <h4>@item.Body</h4>

            @if (item.QuestionType == DAL.Entities.QuestionType.radio)
            {
                <ul class="simple-list">
                    @foreach (var option in item.Options)
                    {
                        <li>
                            @Html.RadioButton("question" + item.Id, option.Name)
                            @Html.Label(option.Name, new { @for = "question" + item.Id })
                        </li>
                    }
                </ul>
            }
            else if (item.QuestionType == DAL.Entities.QuestionType.ckeckbox)
            {
                <ul class="simple-list">
                    @foreach (var option in item.Options)
                    {
                        <li>
                            @Html.CheckBox(item.Id.ToString(), option.Name)
                            @Html.Label(option.Name)
                        </li>
                    }
                </ul>
            }
            else
            {
                <textarea></textarea>
            }

        </div>
    }
</div>